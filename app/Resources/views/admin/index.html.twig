{% extends 'base.html.twig' %}

{% block main %}
    {% if show_confirmation|default(false) %}
        {% set attr = {'data-confirmation': 'true'} %}
        {{ include('admin/_delete_confirmation.html.twig') }}
    {% endif %}

    <div id="wrapper">
        <div class="container">
            <div class="row">
            {% for category in categories %}

                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="{{ asset('images/categories/top' ~ category.name|title ~'.png') }}" alt="{{ category.name }}" />
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="card-text">{{ category.url }}</p>
                        <a class="card-link" href="{{ path('admin_category_edit', {id: category.id}) }}"><i class="fa fa-edit fa-fw"></i>&nbsp;</a>
                        {{ include('admin/_delete_form.html.twig', {category: category}, with_context = false) }}
                    </div>
                </div>
            {% endfor %}
                <div class="card" style="width: 20rem;">
                    <a class="card-link" href="{{ path('admin_category_new') }}"><img class="card-img-top" src="{{ asset('images/add.png') }}" alt="add new category" /></a>
                    <div class="card-body">
                        <h5 class="card-title">Add new category</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


