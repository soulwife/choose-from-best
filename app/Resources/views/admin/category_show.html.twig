{% extends 'base.html.twig' %}

{% block main %}
    <div id="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg">
                    <div class="float-right">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg">
                    <ul class="list-group entities-list">
                        {% for entity in category.bestEntities %}
                            <li class="list-group-item" data-id="{{ entity.id }}">
                                <a href="{{ entity.link }}" target="_blank">{{ entity.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

        </div>
    </div>
{% endblock %}


